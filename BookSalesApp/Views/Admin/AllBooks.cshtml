@model IQueryable<BookSalesApp.DTOs.AdminAllBooksDTO>
@{
    ViewData["title"] = "All books";
    ViewData["books"] = "active";
    Layout = "../Shared/_LayoutAdmin.cshtml";
}
@if (TempData["success"] != null)
{
    <span class="text-warning m-lg-3" id="message">@TempData["success"]</span>
}
@{
    @if (Model.Count() > 0)
    {
        @foreach (var item in Model)
        {
            <div class="card m-3">
                <div class="content m-2">
                    <h3 class="ml-1">@item.Author-@item.Name</h3>
                    <a asp-controller="Admin" asp-action="UpdateBook" asp-route-id="@item.Id" class="btn btn-warning"><i class="fas fa-pen"></i></a>
                    <a asp-controller="Admin" asp-action="DeleteBook" asp-route-id="@item.Id" class="btn btn-danger"><i class="fas fa-trash"></i></a>
                </div>
            </div>
        }
    }
    else
    {
        <h3 class="m-lg-3">Nothing found!</h3>
    }
}