@model BookSalesApp.DTOs.LoginDTO
@{
    ViewData["title"] = "Admin login";
    Layout = "../Shared/_Layout.cshtml";
    ViewData["css"]="Yes";
}
        <h1>Admin login</h1>
        <form method="post">
            <div class="txt_field">
                <input asp-for="Username" class="form-control" type="text" placeholder="Username"/>
            </div>
            <span asp-validation-for="Username" class="text-danger"></span>
            <div class="txt_field">
                <input asp-for="Password" class="form-control" type="password" placeholder="Password" />
            </div>
            <span asp-validation-for="Password" class="text-danger"></span>
            @if (ViewData["error"] != null)
            {
                <p class="text-danger">@ViewData["error"]</p>
            }
            <input type="submit" value="Login">
        </form>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}