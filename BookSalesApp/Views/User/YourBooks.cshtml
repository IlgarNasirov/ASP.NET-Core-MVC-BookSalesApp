@model IQueryable<BookSalesApp.DTOs.AdminAllBooksDTO>
@{
    ViewData["title"] = "Your books";
    Layout = "../Shared/_LayoutUser.cshtml";
    ViewData["yourBooks"] = "active";
}
@{
    @if (Model.Count() > 0)
    {
        @foreach (var item in Model)
        {
            <div class="card m-3">
                <div class="content m-2">
                    <h3 class="ml-1">@item.Author-@item.Name</h3>
                    <a asp-controller="User" asp-action="Download" asp-route-id="@item.Id" class="btn btn-success"><i class="fas fa-download"></i></a>
                </div>
            </div>
        }
    }
    else
    {
        <h3 class="m-lg-3">Nothing found!</h3>
    }
}